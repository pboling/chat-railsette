= form_for(user) do |f|
  - if user.errors.any?
    %div#error_explanation
      %h2= "#{pluralize(user.errors.count, "error")} prohibited this user from being saved:"

      %ul
        - user.errors.full_messages.each do |msg|
          %li>= msg

  %div.field
    %label{:for => "user_name"} Handle
    %br
    = f.text_field :name

  %div.actions
    = f.submit
